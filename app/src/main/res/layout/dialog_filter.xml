<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="24dp"/>

    <!-- Price Filter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_by_price"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <SeekBar
            android:id="@+id/seekBarPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="800"
            android:progress="800"/>

        <TextView
            android:id="@+id/tvPriceValue"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="800 OMR"
            android:textSize="14sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Rating Filter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_by_rating"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <SeekBar
            android:id="@+id/seekBarRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="50"
            android:progress="0"/>

        <TextView
            android:id="@+id/tvRatingValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="0.0 â˜…"
            android:textSize="14sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Distance Filter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_by_distance"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <SeekBar
            android:id="@+id/seekBarDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="100"/>

        <TextView
            android:id="@+id/tvDistanceValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="100 km"
            android:textSize="14sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_filters"
            android:backgroundTint="@color/text_secondary"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_filters"
            android:backgroundTint="@color/primary"/>

    </LinearLayout>

</LinearLayout>

